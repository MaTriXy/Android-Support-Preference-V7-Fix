<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base -->
    <style name="PreferenceFixTheme.MaterialComponents" parent="@style/Theme.MaterialComponents">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Light -->
    <style name="PreferenceFixTheme.MaterialComponents.Light" parent="@style/Theme.MaterialComponents.Light">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferenceFixTheme.MaterialComponents.Light.DarkActionBar" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>
</resources>
